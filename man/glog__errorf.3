.Sh NAME
.Nm glog__errorf
.Nd Print formated message to error level
.
.Sh LIBRARY
.Xr libglog 3
(-lglog)
.
.Sh SYNOPSIS
.In glog.h
.Bd -literal
#define glog__errorf(logger, fmt, ...) glog__putf(logger, &glog__error_level, fmt, __VA_ARGS__)
.Ed
.
.Sh DESCRIPTION
Print formated message to error level.
.Pp
Chaos logging level is 200
.Pp
Print to error logging level messanges about errors.
.
.Sh EXAMPLES
.Bd -literal
#include <glog.h>

int main()
{
	struct glog__logger logger = {0};
	glog__logger_from_prefix(&logger, "logger");

	glog__errorf(&logger, "Error message %i", 0);

	return 0;
}
.Ed
