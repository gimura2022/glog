.Sh NAME
.Nm glog__info
.Nd Print message to info level
.
.Sh LIBRARY
.Xr libglog 3
(-lglog)
.
.Sh SYNOPSIS
.In glog.h
.Bd -literal
#define glog__info(logger, fmt) glog__putf(logger, &glog__info_level, fmt)
.Ed
.
.Sh DESCRIPTION
Print message to info level.
.Pp
Info logging level is 0
.Pp
Print to info level notces about important process.
.
.Sh EXAMPLES
.Bd -literal
#include <glog.h>

int main()
{
	struct glog__logger logger = {0};
	glog__logger_from_prefix(&logger, "logger");

	glog__info(&logger, "Info message");

	return 0;
}
.Ed
