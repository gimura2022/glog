.Sh NAME
.Nm glog__die
.Nd Print message to die level
.
.Sh LIBRARY
.Xr libglog 3
(-lglog)
.
.Sh SYNOPSIS
.In glog.h
.Bd -literal
#define glog__die(logger, fmt) glog__putf(logger, &glog__die_level, fmt)
.Ed
.
.Sh DESCRIPTION
Print message to die level.
.Pp
Chaos logging level is 1000
.Pp
Print messages about critical errors.
.
.Sh NOTES
This macro and logging level crashing app.
.
.Sh EXAMPLES
.Bd -literal
#include <glog.h>

int main()
{
	struct glog__logger logger = {0};
	glog__logger_from_prefix(&logger, "logger");

	glog__die(&logger, "Die message");

	return 0;
}
.Ed
